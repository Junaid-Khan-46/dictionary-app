{
  "name": "fullstack-template",
  "version": "1.0.0",
  "description": "A modern full-stack web application template with React, FastAPI, and MongoDB",
  "main": "index.js",
  "scripts": {
    "install:frontend": "cd frontend && pnpm install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:all": "npm run install:frontend && npm run install:backend",
    "dev:frontend": "cd frontend && pnpm run dev --host",
    "dev:backend": "cd backend && python main.py",
    "dev:backend:test": "cd backend && python main_test.py",
    "build:frontend": "cd frontend && pnpm run build",
    "start:frontend": "cd frontend && pnpm run preview",
    "setup": "npm run install:all && echo 'Setup complete! Create .env files from .env.example templates'",
    "clean": "rm -rf frontend/node_modules frontend/dist backend/__pycache__ backend/.pytest_cache"
  },
  "keywords": [
    "fullstack",
    "react",
    "fastapi",
    "mongodb",
    "template",
    "starter",
    "boilerplate",
    "jwt",
    "authentication",
    "crud",
    "tailwindcss",
    "vite"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/fullstack-template.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/fullstack-template/issues"
  },
  "homepage": "https://github.com/yourusername/fullstack-template#readme",
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.11.0"
  }
}

